# ==========================================
# Faurge - Environment Configuration
# ==========================================

# --- Hardware & VRAM Watchdog Constraints ---
# Maximum accessible VRAM in MB (Hard limit: 4096)
# FAURGE_GPU_TOTAL_VRAM_MB=4096

# Minimum free VRAM required in MB before agents awaken
# FAURGE_VRAM_SAFETY_MARGIN_MB=500

# How often the pynvml daemon checks the GPU (Seconds)
# FAURGE_WATCHDOG_POLL_RATE_SEC=2.0

# --- Audio & Shadow Space Configuration ---
# Audio processing sample rate (e.g., 44100, 48000, 96000)
# FAURGE_AUDIO_SAMPLE_RATE=48000

# Audio channels (1 for Mono vocal inputs)
# FAURGE_AUDIO_CHANNELS=1

# Length of asynchronous capture buffer (Seconds)
# FAURGE_SHADOW_BUFFER_LENGTH_SEC=5.0

# --- DSP & PipeWire API Settings ---
# OSC destination IP for headless DSP plugins
# FAURGE_DSP_OSC_IP=127.0.0.1

# OSC destination Port
# FAURGE_DSP_OSC_PORT=9000

# Maximum gain correction applied by Ursula (dB)
# FAURGE_MAX_GAIN_DB=15.0

# Minimum gain correction applied by Ursula (dB)
# FAURGE_MIN_GAIN_DB=-24.0

# Absolute clipping threshold ceiling (dBFS)
# FAURGE_CLIP_THRESHOLD_DBFS=-0.5

# --- Fallback / Baseline Targets (If agent fails) ---
# Target LUFS (Loudness)
# FAURGE_FALLBACK_TARGETS_LUFS=-16.0

# Target LRA (Loudness Range)
# FAURGE_FALLBACK_TARGETS_LRA=4.0

# Target Crest Factor
# FAURGE_FALLBACK_TARGETS_CREST_FACTOR=3.5

# --- Machine Learning / Genesis ---
# Target number of harmonic oscillators for Genesis Synthesis
# FAURGE_HARMONIC_OSCILLATORS=100

# --- Live Loop & MLOps ---
# Drop agent routing instantly if VRAM spikes beyond margin (true/false)
# FAURGE_BYPASS_ON_VRAM_SPIKE=true

# Number of plugin state snapshots to retain for hot-rollback
# FAURGE_ROLLBACK_RETENTION=10

# Maximum allowable audio loop latency before forcing dry bypass (Milliseconds)
# FAURGE_MAX_LATENCY_MS=20

# Prometheus/HTTP Health Port
# FAURGE_HEALTH_PORT=8765

# Dedicated Metrics Exporter Port
# FAURGE_METRICS_PORT=8000

# API Key for secured endpoint access (Leave empty for no auth)
# FAURGE_API_KEY=

# --- Logging ---
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# FAURGE_LOG_LEVEL=INFO

# Max log file size in bytes (Default: 5MB)
# FAURGE_LOG_MAX_BYTES=5242880

# Keep this many backup logs
# FAURGE_LOG_BACKUP_COUNT=5
